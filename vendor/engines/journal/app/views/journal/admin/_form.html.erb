<%= simple_form_for [:site_admin, @extension], html: {class: 'form-horizontal'} do |f| %>

  <%= f.input :show_author, wrapper: :checkbox, as: :boolean %>
  <%= f.input :show_created_at, wrapper: :checkbox, as: :boolean %>
  <%= f.input :show_updated_at, wrapper: :checkbox, as: :boolean %>
  <%= f.input :image_size, collection: [:t, :m, :l, :i].map{|size| [t(".#{size}"),size] },
        include_blank: false,
        hint: t(".image_size_hint") %>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary', disable_with: t("please_wait") %>
    <%= link_to t("back"), :back, class: "btn btn-default" %>
  </div>
<% end %>
