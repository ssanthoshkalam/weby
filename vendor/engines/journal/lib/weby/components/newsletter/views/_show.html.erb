<% if params[:opt] != 'delete' %>
  <%= content_tag component.html_tag, class: 'newsletter_component' do %>
    <% if Weby::Components.factory(current_site.active_skin.components.find_by_name("newsletter")).hide_form.to_s == "0" %>
      <%= form_tag new_newsletter_path, id: 'newsletter', method: 'get' do %>
        <%= flash_message modal: true %>
        <label><%= component.text %></label>
        <%= hidden_field_tag :group, component.group %>
        <%= email_field_tag :email, nil, placeholder: t('.email') %>
        <%= submit_tag component.button_text, class: 'newsletter_submit' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
