<%= each_i18n_tab do |locale| %>
  <%= f.component_i18n_input locale, :label, :as => :string %>
<% end %>

<% if !(groups = current_site.groups).empty? %>
  <div class="form-group check_boxes optional">
    <label class="check_boxes optional control-label"> <%= t(".group_checked") %> </label>
    <div class="controls">
      <% groups.order(position: :asc).each do |group| %>
        <label class="checkbox">
          <%= check_box_tag 'feedback_component[groups_id][]', group.id, component.checked?(group.id), class: 'check_boxes optional'  %>
          <%= group.name %>
        </label>
      <% end %>
    </div>
  </div>
<% end %>

<%= f.input :html_class, :input_html => {:pattern => '^[A-Za-z0-9_\-\s]*$'} %>
