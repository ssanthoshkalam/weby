<div id="feedback_sent">
  <h1><%= t('.success_sent') %></h1>
  <p>
    <% if @message.groups.any? %>
      <%= t('.group_sent') %>
      <%= @message.groups.order(position: :asc).collect{|g| g.name }.join(', ') %>
    <% end %>
  </p>

  <p>
    <%= link_to icon('chevron-left', text: t('.back_link')), main_app.site_path %>
  <p>
</div>
