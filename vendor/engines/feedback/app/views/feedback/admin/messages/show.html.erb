<%- title '.feedback' %>
<% breadcrumb :show_message, @message %>    
    <p>
    <b><%= t(".name") %>:</b>
    <%= @message.name %>
    </p>
    <p>
    <b><%= t(".email") %>:</b>
    <%= @message.email %>
    </p>
    <p>
    <b><%= t(".subject") %>:</b>
    <%= @message.subject %>
    </p>
    <p>
    <b><%= t(".message") %>:</b>
    <pre><%= @message.message %></pre>
    </p>
    <p>
    <b><%= t((@message.groups.length>1 ? ".groups" : ".group")) %>:</b><br/>
    <% @message.groups.order(position: :asc).each do |group| %>
      <%= group.name %> (<%= group.emails %>)<br/>
    <% end %>
    </p>
    <p>
    <b><%= t('.send_date') %>:</b>
    <%= l @message.created_at, format: :short %>
    </p>

    <div class="form-actions">
      <%= link_to icon('list', text:t(".list_all")), admin_messages_path %>
      <%= link_to icon('chevron-left', text:t("back")), :back %>
    </div>

