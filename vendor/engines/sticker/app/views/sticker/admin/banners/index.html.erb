<% title ".banners" %>
<% breadcrumb params[:search].present? ? :banners_search : :sticker_banners, params[:search] %>
<div class="row">
  <div class="col-md-5">
    <%= form_tag admin_banners_path, method: 'get', autocapitalize: "off", class: 'search' do %>
      <%= search_input params[:search] %>
    <% end %>
  </div>
  <div class="col-md-7">
    <div class="pull-right">
      <% with_permission(action: :new) do %>
        <%= link_to t(".new_banner"), new_admin_banner_path, class: "btn btn-success" %>
      <% end %>
      <% with_permission(action: :fronts) do %>
        <%= link_to t(".publisheds"), fronts_admin_banners_path, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>

<% if @banners.empty? %>
  <div class="alert alert-warning">
    <%= t(".none_banner") %>
  </div>
<% else %>
  <div id="list">
    <%= render 'view_picker' %>
    <%= render partial: banners_partial %>
  </div>
<% end %>

<% content_for :javascripts, javascript_include_tag('sticker/admin.banners.index') %>