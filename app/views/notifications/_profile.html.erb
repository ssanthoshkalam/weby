<div class="avatar">
  <%= link_to main_app.profile_url(current_user.login, subdomain: current_site) do %>
    <img src="//www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(current_user.email) %>?s=120&d=mm" class="img-circle">
  <% end %>
</div>
<%= link_to main_app.profile_url(current_user.login, subdomain: current_site) do %>
  <div class="info">
    <%= current_user.first_name %><br />
    <span class="last-name"><%= current_user.last_name %></span>
  </div>
<% end %>
<div class="actions">
  <%= link_to "#{icon('chevron-left', white: true)} #{t("back")}".html_safe, :back, class: "btn btn-default btn-block" %>
</div>