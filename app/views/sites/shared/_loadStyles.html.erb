<% @current_skin.styles.published.reorder('styles.position asc').each do |style| %>
  <% next if !style.owner.active? %>
  <!-- <%= "#{style.name} (#{style.owner.name})" %> -->
  <style type="text/css">
    <%= raw style.css %>
  </style>
<% end if @current_skin %>

<%= stylesheet_link_tag 'shared/contrast_blue' if session[:contrast] == "blue" %>
<%= stylesheet_link_tag 'shared/contrast_black' if session[:contrast] == "black" %>
<%= stylesheet_link_tag 'shared/contrast_yellow' if session[:contrast] == "yellow" %>