<% title ".roles" %>
<%= render 'roles_table' do %>
  <% if check_permission(Admin::RolesController, [:new]) %>
    <%= link_to t(".new_role"),
      new_admin_role_path,
      class: "btn btn-success" %>
  <% end %>
  <% if check_permission(Admin::UsersController, [:index]) %>
    <%= link_to t(".users"),
      main_app.admin_users_path,
      class: "btn btn-default" %>
  <% end %>
  <% if check_permission(Admin::UsersController, :manage_roles) %>
    <%= link_to t('.manage_roles'), manage_roles_admin_users_path, class: "btn btn-default" %>
  <% end %>
<% end %>
