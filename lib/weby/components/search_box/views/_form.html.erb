<%= f.input :action, collection: component.action_options.map{|o| [t(".#{o}"), o] } %>
<%= f.input :width, as: :integer %>
<%= f.input :align, collection: [
    [t(".right"),"right"],
    [t(".left"),"left"]
  ],
  priority: component.align,
  include_blank: false
%>
<%= f.input :show_button, wrapper: :checkbox, as: :boolean %>
