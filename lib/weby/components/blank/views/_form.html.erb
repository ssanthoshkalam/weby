<%= each_i18n_tab do |locale| %>
  <div class="form-group">
    <div class="col-md-9 col-md-offset-3">
      <div class="btn-toolbar">
        <div class="btn-group">
          <%= link_to t(".format"), "#", class: "btn btn-sm btn-default js-code-format" %>
          <%= link_to t(".comment"), "#", class: "btn btn-sm btn-default js-code-comment" %>
          <%= link_to t(".uncomment"), "#", class: "btn btn-sm btn-default js-code-uncomment" %>
        </div>
      </div>
    </div>
  </div>
  <%= f.component_i18n_input locale, :body,
        as: :text,
        wrapper_html: { class: 'nostyle' },
        input_html: { class: 'code-area' } %>
<% end %>

<%= f.input :html_class, :input_html => {:pattern => '^[A-Za-z0-9_\-\s]*$'} %>

<%= f.input :put_at_end, wrapper: :checkbox, as: :boolean %>

<% content_for :javascripts, javascript_include_tag("init/codemirror") %>
